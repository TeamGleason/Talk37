<Window x:Class="FrameworkApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrameworkApp"
        xmlns:gaze="clr-namespace:Microsoft.Toolkit.Uwp.Input.GazeInteraction;assembly=FrameworkLib"
        gaze:GazeInput.Interaction="Enabled"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Grid.Row="1" Content="Click Me" FontSize="100" Width="500" Height="200" Margin="5" Click="OnButtonClick"/>
            <TextBlock x:Name="ClickCountBlock" Text="Not clicked" FontSize="50" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
