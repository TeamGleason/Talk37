<Window x:Class="TeamGleason.SpeakFaster.SimpleKeyboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeamGleason.SpeakFaster.SimpleKeyboard"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <FontFamily x:Key="KeyboardFontFamily">Arial Black</FontFamily>
        <Style TargetType="local:KeyboardButton">
            <Setter Property="FontFamily" Value="{StaticResource KeyboardFontFamily}"/>
        </Style>
        <Style TargetType="local:KeyboardToggleButton">
            <Setter Property="FontFamily" Value="{StaticResource KeyboardFontFamily}"/>
        </Style>
    </Window.Resources>
    <Grid>
        <local:KeyboardControl x:Name="TheKeyboard"/>
    </Grid>
</Window>
